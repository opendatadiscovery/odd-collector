FIELD_NAME: ("A".."z" | "1".."9" | "-" | "_")+

NUMBER: ("0" | "1".."9" ("0".."9")*)

SIMPLE_TYPE: "int"i
           | "string"i
           | "bigint"i
           | "binary"i
           | "boolean"i
           | "char"i
           | "date"i
           | "double"i
           | "float"i
           | "interval"i
           | "smallint"i
           | "timestamp"i
           | "tinyint"i

varchar_type: "varchar"i ("(" NUMBER ")")*
decimal_type: "decimal"i ("(" NUMBER "," NUMBER ")")*

type: SIMPLE_TYPE
    | varchar_type
    | decimal_type
    | iterable_type
    | struct_type
    | union_type
    | map_type

field_definition: FIELD_NAME ":" type

iterable_type: ("array"i | "set"i) "<" (type) ">"

struct_type: "struct"i "<" [field_definition ("," field_definition)*]+ ">"

union_type: "union"i "<" [type ("," type)*] ">"

map_type: "map"i "<" type "," type ">"

%import common.WS
%ignore WS